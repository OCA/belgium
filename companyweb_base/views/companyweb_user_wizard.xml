<odoo>
    <record id="companyweb_user_wizard" model="ir.ui.view">
        <field name="name">Company Web User Wizard</field>
        <field name="model">companyweb_base.user_wizard</field>
        <field name="arch" type="xml">
            <form>
                    <group>
                        <field name="cweb_login"/>
                    </group>
                    <group>
                        <field name="cweb_password"/>
                    </group>
                <footer>
                    <button type="object" name="get_credentials"
                            string="Register" class="oe_highlight"
                            attrs="{'invisible':
                                    [('cweb_login','=',False),
                                    ('cweb_password', '=',False)]
                                    }"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- More button Action -->
    <record id="action_companyweb_user_wizard" model="ir.actions.act_window">
            <field name="name">Add CompanyWeb Credentials</field>
            <field name="view_mode">form</field>
            <field name="res_model">companyweb_base.user_wizard</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_res_users"/>
    </record>

</odoo>
